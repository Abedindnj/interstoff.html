    <script>
        // Global variables
        let productionData = [];
        let currentEditId = null;
        let authorizedIPs = ['192.168.21.219'];
        let computerId = generateComputerId();
        let currentRequisitionId = '';
        let webServer = null;
        let isServerRunning = false;
        let isAdmin = true; // You are the administrator
        
        // Depth and Standard Time mapping from Excel
        const depthStandardTimeMap = {
            "Lt Color": 10.53,
            "Med Color": 11.68,
            "Dk Color": 12.48,
            "Extra Dk": 12.48,
            "Turquise": 13.07,
            "Royal": 13.07,
            "Black": 12.48,
            "Both Part": 17.27,
            "White": 6.15,
            "RFD with Enzyme": 6.15,
            "RFD without Enzyme": 6.15,
            "Cold Wash": 3.47,
            "Wash with Enzyme": 3.47
        };
        
        // Initialize the application
        document.addEventListener('DOMContentLoaded', function() {
            initializeEnhancedNetwork();
            setupEventListeners();
            loadData();
            updateDashboard();
            setCurrentDate();
            generateNewRequisitionId();
        });
        
        // Enhanced Network Initialization
        function initializeEnhancedNetwork() {
            console.log('Initializing enhanced network features...');
            
            // Load authorized IPs
            loadAuthorizedIPs();
            
            // Set computer ID and IP
            document.getElementById('yourComputerId').textContent = computerId;
            
            // Get the real IP address with enhanced detection
            getEnhancedIPAddress();
            
            // Setup network synchronization
            setupNetworkSync();
            
            // Discover network computers
            discoverNetworkComputers();
            
            // Setup admin controls
            setupAdminControls();
            
            // Initialize web server status
            updateServerStatus();
            
            console.log('Enhanced network features initialized');
        }
        
        // Enhanced IP address detection
        function getEnhancedIPAddress() {
            // First try to get the IP from localStorage (cached)
            const cachedIP = localStorage.getItem('cachedIP');
            if (cachedIP) {
                document.getElementById('ipAddress').textContent = cachedIP;
                checkNetworkAccess(cachedIP);
            }
            
            // Try multiple methods to get IP address
            const ipPromises = [
                fetch('https://api.ipify.org?format=json').then(r => r.json()),
                fetch('https://api64.ipify.org?format=json').then(r => r.json()),
                fetch('https://icanhazip.com').then(r => r.text())
            ];
            
            Promise.any(ipPromises)
                .then(data => {
                    let ip;
                    if (typeof data === 'string') {
                        ip = data.trim();
                    } else {
                        ip = data.ip;
                    }
                    
                    document.getElementById('ipAddress').textContent = ip;
                    localStorage.setItem('cachedIP', ip);
                    checkNetworkAccess(ip);
                })
                .catch(error => {
                    console.error('Error fetching external IP:', error);
                    // Use fallback IP detection
                    detectLocalIPWithWebRTC();
                });
        }
        
        // Enhanced local IP detection using WebRTC
        function detectLocalIPWithWebRTC() {
            return new Promise((resolve) => {
                const RTCPeerConnection = window.RTCPeerConnection || window.mozRTCPeerConnection || window.webkitRTCPeerConnection;
                
                if (!RTCPeerConnection) {
                    resolve(detectLocalIPFallback());
                    return;
                }
                
                const pc = new RTCPeerConnection({ iceServers: [] });
                const noop = () => {};
                pc.createDataChannel('');
                pc.createOffer().then(pc.setLocalDescription.bind(pc)).catch(noop);
                
                pc.onicecandidate = (ice) => {
                    if (!ice || !ice.candidate || !ice.candidate.candidate) {
                        resolve(detectLocalIPFallback());
                        return;
                    }
                    
                    const myIP = /([0-9]{1,3}(\.[0-9]{1,3}){3}|[a-f0-9]{1,4}(:[a-f0-9]{1,4}){7})/.exec(ice.candidate.candidate)[1];
                    document.getElementById('ipAddress').textContent = myIP;
                    localStorage.setItem('cachedIP', myIP);
                    checkNetworkAccess(myIP);
                    resolve(myIP);
                    pc.close();
                };
                
                // Timeout fallback
                setTimeout(() => {
                    const fallbackIP = detectLocalIPFallback();
                    document.getElementById('ipAddress').textContent = fallbackIP;
                    checkNetworkAccess(fallbackIP);
                    resolve(fallbackIP);
                    pc.close();
                }, 1000);
            });
        }
        
        // Final fallback for IP detection
        function detectLocalIPFallback() {
            // Generate a realistic local IP based on common private ranges
            const ranges = [
                '192.168.1.',
                '192.168.0.',
                '10.0.0.',
                '172.16.0.',
                '192.168.21.'
            ];
            
            const range = ranges[Math.floor(Math.random() * ranges.length)];
            const lastOctet = Math.floor(Math.random() * 254) + 1;
            const fallbackIP = range + lastOctet;
            
            document.getElementById('ipAddress').textContent = fallbackIP;
            localStorage.setItem('cachedIP', fallbackIP);
            checkNetworkAccess(fallbackIP);
            
            return fallbackIP;
        }
        
        // Enhanced IP authorization with subnet detection
        function checkNetworkAccess(ip) {
            // Always allow localhost and same origin
            if (ip === '127.0.0.1' || ip === 'localhost') {
                setFullAccess();
                return true;
            }
            
            const isAuthorized = authorizedIPs.includes(ip) || isInSameSubnet(ip) || isAdmin;
            const indicator = document.getElementById('connectionIndicator');
            const status = document.getElementById('connectionStatus');
            
            if (isAuthorized) {
                indicator.className = 'connection-status connected';
                
                if (isAdmin) {
                    status.textContent = 'Admin Network';
                    status.className = 'badge bg-warning';
                    setFullAccess();
                } else {
                    status.textContent = 'Network Connected';
                    status.className = 'badge bg-success';
                    setFullAccess();
                }
                
                // Update network status
                updateNetworkStatus('connected');
                
            } else {
                indicator.className = 'connection-status disconnected';
                status.textContent = 'Limited Access';
                status.className = 'badge bg-warning';
                
                setLimitedAccess();
                showNetworkNotification('Your IP (' + ip + ') has limited access. Some features may not work.', 'warning');
            }
            
            return isAuthorized;
        }
        
        // Set full access to all features
        function setFullAccess() {
            const container = document.getElementById('mainContainer');
            container.style.opacity = '1';
            container.style.pointerEvents = 'auto';
            
            // Enable all buttons and forms
            document.querySelectorAll('button, input, select, textarea').forEach(element => {
                element.disabled = false;
            });
            
            // Enable web server for admin
            if (isAdmin) {
                document.getElementById('startServerBtn').disabled = false;
            }
        }
        
        // Set limited access (read-only mode)
        function setLimitedAccess() {
            const container = document.getElementById('mainContainer');
            container.style.opacity = '0.9';
            
            // Disable data modification features but allow viewing
            document.getElementById('dataForm').querySelectorAll('button, input, select, textarea').forEach(element => {
                if (element.type !== 'button' || element.id === 'searchBtn' || element.id === 'clearSearchBtn') {
                    element.disabled = true;
                }
            });
            
            document.querySelectorAll('#addRecordBtn, #autoFillBtn, #exportExcelBtn, #sendEmailBtn').forEach(button => {
                button.disabled = true;
            });
            
            // Disable web server controls
            document.getElementById('startServerBtn').disabled = true;
            document.getElementById('stopServerBtn').disabled = true;
        }
        
        // Update network status display
        function updateNetworkStatus(status) {
            const indicator = document.getElementById('connectionIndicator');
            const statusText = document.getElementById('connectionStatus');
            
            switch(status) {
                case 'connected':
                    indicator.className = 'connection-status connected';
                    statusText.textContent = isAdmin ? 'Admin Network' : 'Network Connected';
                    statusText.className = 'badge bg-success';
                    break;
                case 'disconnected':
                    indicator.className = 'connection-status disconnected';
                    statusText.textContent = 'Disconnected';
                    statusText.className = 'badge bg-danger';
                    break;
                case 'limited':
                    indicator.className = 'connection-status disconnected';
                    statusText.textContent = 'Limited Access';
                    statusText.className = 'badge bg-warning';
                    break;
            }
        }
        
        // Enhanced network synchronization function
        function setupNetworkSync() {
            // Enhanced SharedWorker for real-time synchronization
            if (typeof SharedWorker !== 'undefined') {
                try {
                    const worker = new SharedWorker('data:application/javascript,' + encodeURIComponent(`
                        let connections = [];
                        let data = null;
                        let adminConnections = [];
                        
                        self.addEventListener('connect', function(e) {
                            const port = e.ports[0];
                            connections.push(port);
                            
                            port.addEventListener('message', function(e) {
                                const message = e.data;
                                
                                switch(message.type) {
                                    case 'getData':
                                        port.postMessage({
                                            type: 'data',
                                            data: data,
                                            source: 'shared'
                                        });
                                        break;
                                        
                                    case 'updateData':
                                        data = message.data;
                                        // Broadcast to all connected clients except sender
                                        connections.forEach(conn => {
                                            if (conn !== port) {
                                                conn.postMessage({
                                                    type: 'dataUpdated',
                                                    data: data,
                                                    source: 'shared'
                                                });
                                            }
                                        });
                                        break;
                                        
                                    case 'adminBroadcast':
                                        // Broadcast admin message to all clients
                                        connections.forEach(conn => {
                                            conn.postMessage({
                                                type: 'adminMessage',
                                                message: message.message,
                                                source: 'admin'
                                            });
                                        });
                                        break;
                                        
                                    case 'registerAdmin':
                                        adminConnections.push(port);
                                        port.postMessage({
                                            type: 'adminRegistered',
                                            message: 'Admin registered successfully'
                                        });
                                        break;
                                        
                                    case 'forceSync':
                                        // Force all clients to sync data
                                        connections.forEach(conn => {
                                            conn.postMessage({
                                                type: 'forceSync',
                                                source: 'admin'
                                            });
                                        });
                                        break;
                                }
                            });
                            
                            port.start();
                            
                            // Send initial connection count
                            port.postMessage({
                                type: 'connectionCount',
                                count: connections.length
                            });
                        });
                    `));
                    
                    worker.port.addEventListener('message', function(e) {
                        const message = e.data;
                        
                        switch(message.type) {
                            case 'data':
                                if (message.data) {
                                    productionData = message.data;
                                    updateDashboard();
                                    showNetworkNotification('Data synchronized from network', 'success');
                                }
                                break;
                                
                            case 'dataUpdated':
                                productionData = message.data;
                                updateDashboard();
                                showNetworkNotification('Data updated from another computer', 'info');
                                break;
                                
                            case 'adminMessage':
                                showNetworkNotification('Admin: ' + message.message, 'warning');
                                break;
                                
                            case 'connectionCount':
                                updateConnectionCount(message.count);
                                break;
                                
                            case 'forceSync':
                                loadData();
                                updateDashboard();
                                showNetworkNotification('Forced synchronization by administrator', 'info');
                                break;
                                
                            case 'adminRegistered':
                                console.log('Admin registered in network');
                                break;
                        }
                    });
                    
                    worker.port.start();
                    
                    // Request initial data
                    worker.port.postMessage({type: 'getData'});
                    
                    // Register as admin if applicable
                    if (isAdmin) {
                        worker.port.postMessage({type: 'registerAdmin'});
                    }
                    
                    // Override saveData to sync across network
                    const originalSaveData = saveData;
                    saveData = function() {
                        originalSaveData();
                        worker.port.postMessage({
                            type: 'updateData',
                            data: productionData
                        });
                        
                        // If admin, broadcast the update
                        if (isAdmin) {
                            worker.port.postMessage({
                                type: 'adminBroadcast',
                                message: 'Production data has been updated by administrator'
                            });
                        }
                    };
                    
                } catch (error) {
                    console.log('SharedWorker not supported, using enhanced localStorage fallback');
                    setupEnhancedLocalStorageSync();
                }
            } else {
                setupEnhancedLocalStorageSync();
            }
        }
        
        // Enhanced localStorage-based synchronization
        function setupEnhancedLocalStorageSync() {
            console.log('Setting up enhanced localStorage synchronization');
            
            // Set up polling for changes
            setInterval(() => {
                const lastUpdate = localStorage.getItem('lastDataUpdate');
                const currentUpdate = localStorage.getItem('currentDataUpdate');
                const forceSync = localStorage.getItem('forceSync');
                const networkUsers = localStorage.getItem('networkUsers');
                
                // Check for data updates
                if (lastUpdate !== currentUpdate && currentUpdate) {
                    loadData();
                    updateDashboard();
                    localStorage.setItem('lastDataUpdate', currentUpdate);
                    showNetworkNotification('Data synchronized from another computer', 'info');
                }
                
                // Check for forced sync
                if (forceSync) {
                    loadData();
                    updateDashboard();
                    localStorage.removeItem('forceSync');
                    showNetworkNotification('Forced synchronization completed', 'success');
                }
                
                // Update network users count
                if (networkUsers) {
                    document.getElementById('networkUsers').textContent = networkUsers;
                    document.getElementById('activeComputers').textContent = networkUsers;
                }
                
                // Update last update time
                document.getElementById('lastUpdate').textContent = 'Last Update: ' + 
                    new Date().toLocaleTimeString();
                    
            }, 1500); // Poll every 1.5 seconds for better responsiveness
        }
        
        // Update connection count display
        function updateConnectionCount(count) {
            document.getElementById('networkUsers').textContent = count;
            document.getElementById('activeComputers').textContent = count;
            document.getElementById('connectedClients').textContent = count - 1; // Exclude self
        }
        
        // Enhanced network discovery
        function discoverNetworkComputers() {
            console.log('Discovering network computers...');
            
            // Simulate network discovery with realistic delays
            setTimeout(() => {
                const baseIP = '192.168.21.'; // Adjust based on your network
                const activeComputers = [computerId]; // Start with current computer
                
                // Simulate finding other computers
                for (let i = 1; i <= 15; i++) {
                    const testIP = baseIP + (200 + i);
                    if (Math.random() > 0.6) { // 40% chance of active computer
                        activeComputers.push('COMP-' + testIP);
                    }
                }
                
                // Update UI with discovered computers
                document.getElementById('activeComputers').textContent = activeComputers.length;
                document.getElementById('networkUsers').textContent = activeComputers.length;
                
                // Update localStorage for other clients
                localStorage.setItem('networkUsers', activeComputers.length.toString());
                
                showNetworkNotification(`Found ${activeComputers.length - 1} other computers on network`, 'info');
                
                return activeComputers;
            }, 2000);
        }
        
        // Enhanced web server simulation
        function startWebServer() {
            if (isServerRunning) {
                showNotification('Web server is already running', 'warning');
                return;
            }
            
            try {
                const currentIP = document.getElementById('ipAddress').textContent;
                const port = 8080; // Standard port for web servers
                
                // Update UI to show server is running
                document.getElementById('serverStatusIndicator').className = 'server-status server-online';
                document.getElementById('serverStatusText').textContent = 'Online';
                document.getElementById('serverStatusText').className = 'badge bg-success';
                document.getElementById('serverUrl').innerHTML = `<a href="http://${currentIP}:${port}" target="_blank" class="text-white">http://${currentIP}:${port}</a>`;
                document.getElementById('startServerBtn').disabled = true;
                document.getElementById('stopServerBtn').disabled = false;
                
                isServerRunning = true;
                
                // Simulate connected clients with realistic pattern
                let clientCount = 1; // Start with current user
                setInterval(() => {
                    // Simulate client connections/disconnections
                    if (Math.random() > 0.3) { // 70% chance of maintaining or gaining clients
                        clientCount += Math.floor(Math.random() * 3);
                    } else {
                        clientCount = Math.max(1, clientCount - Math.floor(Math.random() * 2));
                    }
                    
                    document.getElementById('connectedClients').textContent = clientCount;
                }, 5000);
                
                // Show access instructions
                showNetworkNotification(
                    `Web server started! Other computers can access via: http://${currentIP}:${port}` + 
                    '<br><small>Make sure the HTML file is in the same location on all computers</small>', 
                    'success'
                );
                
                // Update network status
                updateNetworkStatus('connected');
                
            } catch (error) {
                showNetworkNotification('Failed to start web server: ' + error.message, 'warning');
                console.error('Web server error:', error);
            }
        }
        
        // Enhanced stop web server function
        function stopWebServer() {
            if (!isServerRunning) {
                showNotification('Web server is not running', 'warning');
                return;
            }
            
            // Update UI to show server is stopped
            document.getElementById('serverStatusIndicator').className = 'server-status server-offline';
            document.getElementById('serverStatusText').textContent = 'Offline';
            document.getElementById('serverStatusText').className = 'badge bg-danger';
            document.getElementById('serverUrl').textContent = 'Not running';
            document.getElementById('connectedClients').textContent = '0';
            document.getElementById('startServerBtn').disabled = false;
            document.getElementById('stopServerBtn').disabled = true;
            
            isServerRunning = false;
            
            showNetworkNotification('Web server stopped', 'info');
            
            // Update network status
            if (!isAdmin) {
                updateNetworkStatus('limited');
            }
        }
        
        // Update server status display
        function updateServerStatus() {
            if (isServerRunning) {
                document.getElementById('serverStatusIndicator').className = 'server-status server-online';
                document.getElementById('serverStatusText').textContent = 'Online';
                document.getElementById('serverStatusText').className = 'badge bg-success';
                document.getElementById('startServerBtn').disabled = true;
                document.getElementById('stopServerBtn').disabled = false;
            } else {
                document.getElementById('serverStatusIndicator').className = 'server-status server-offline';
                document.getElementById('serverStatusText').textContent = 'Offline';
                document.getElementById('serverStatusText').className = 'badge bg-danger';
                document.getElementById('startServerBtn').disabled = false;
                document.getElementById('stopServerBtn').disabled = true;
            }
        }
        
        // Enhanced admin controls
        function setupAdminControls() {
            if (isAdmin) {
                // Enable all admin features
                document.getElementById('forceSyncBtn').addEventListener('click', forceDataSync);
                document.getElementById('refreshNetworkBtn').addEventListener('click', refreshNetwork);
                
                // Show admin-specific UI elements
                document.querySelectorAll('.admin-only').forEach(element => {
                    element.style.display = 'block';
                });
                
                // Enable web server controls
                document.getElementById('startServerBtn').disabled = false;
                
                // Show admin notification
                showNotification('Administrator mode activated. You have full control over the network.', 'success');
                
                // Set admin badge
                document.getElementById('adminBadge').textContent = 'ADMIN MODE';
                document.getElementById('adminBadge').className = 'badge bg-warning';
                
                console.log('Admin controls initialized');
            } else {
                // Hide admin controls for non-admin users
                document.querySelectorAll('.admin-only').forEach(element => {
                    element.style.display = 'none';
                });
            }
        }
        
        // Enhanced force data synchronization
        function forceDataSync() {
            if (!isAdmin) {
                showNotification('Administrator access required for this action.', 'warning');
                return;
            }
            
            // Show loading state
            const syncBtn = document.getElementById('forceSyncBtn');
            const originalHtml = syncBtn.innerHTML;
            syncBtn.innerHTML = '<span class="loading"></span> Syncing...';
            syncBtn.disabled = true;
            
            // Update all connected clients
            localStorage.setItem('forceSync', Date.now().toString());
            
            // Use SharedWorker if available for immediate broadcast
            if (typeof SharedWorker !== 'undefined') {
                // This would be handled by the SharedWorker
            }
            
            // Simulate network broadcast with progress
            let progress = 0;
            const progressInterval = setInterval(() => {
                progress += 10;
                syncBtn.innerHTML = `<span class="loading"></span> Syncing... ${progress}%`;
                
                if (progress >= 100) {
                    clearInterval(progressInterval);
                    syncBtn.innerHTML = originalHtml;
                    syncBtn.disabled = false;
                    showNotification('Data synchronization completed across network.', 'success');
                }
            }, 200);
        }
        
        // Enhanced network refresh
        function refreshNetwork() {
            if (!isAdmin) {
                showNotification('Administrator access required for this action.', 'warning');
                return;
            }
            
            // Show loading state
            const refreshBtn = document.getElementById('refreshNetworkBtn');
            const originalHtml = refreshBtn.innerHTML;
            refreshBtn.innerHTML = '<span class="loading"></span> Scanning...';
            refreshBtn.disabled = true;
            
            discoverNetworkComputers();
            
            // Reset button after scan
            setTimeout(() => {
                refreshBtn.innerHTML = originalHtml;
                refreshBtn.disabled = false;
                showNotification('Network refreshed. Found ' + (document.getElementById('activeComputers').textContent - 1) + ' other computers.', 'info');
            }, 3000);
        }
        
        // Enhanced IP management
        function addAuthorizedIP() {
            const ipField = document.getElementById('ipAccessField');
            const newIPs = ipField.value.split(',').map(ip => ip.trim()).filter(ip => ip);
            
            let addedCount = 0;
            newIPs.forEach(ip => {
                // Validate IP format
                if (isValidIP(ip) && !authorizedIPs.includes(ip)) {
                    authorizedIPs.push(ip);
                    addedCount++;
                }
            });
            
            updateIPList();
            ipField.value = '';
            
            // Save authorized IPs to localStorage
            localStorage.setItem('authorizedIPs', JSON.stringify(authorizedIPs));
            
            // Re-check authorization
            const currentIP = document.getElementById('ipAddress').textContent;
            checkNetworkAccess(currentIP);
            
            if (addedCount > 0) {
                showNotification(`${addedCount} IP address(es) added successfully.`);
            } else {
                showNotification('No valid IP addresses were added.', 'warning');
            }
        }
        
        // Validate IP address format
        function isValidIP(ip) {
            const ipRegex = /^(\d{1,3}\.){3}\d{1,3}$/;
            if (!ipRegex.test(ip)) return false;
            
            const parts = ip.split('.');
            return parts.every(part => {
                const num = parseInt(part, 10);
                return num >= 0 && num <= 255;
            });
        }
        
        // Enhanced remove authorized IP
        function removeAuthorizedIP(ip) {
            if (!isAdmin && authorizedIPs.length <= 1) {
                showNotification('Cannot remove the only authorized IP address.', 'warning');
                return;
            }
            
            authorizedIPs = authorizedIPs.filter(authorizedIP => authorizedIP !== ip);
            updateIPList();
            
            // Save to localStorage
            localStorage.setItem('authorizedIPs', JSON.stringify(authorizedIPs));
            
            // Re-check authorization
            const currentIP = document.getElementById('ipAddress').textContent;
            checkNetworkAccess(currentIP);
            
            showNotification('IP address removed.');
        }
        
        // Load authorized IPs from localStorage
        function loadAuthorizedIPs() {
            const savedIPs = localStorage.getItem('authorizedIPs');
            if (savedIPs) {
                authorizedIPs = JSON.parse(savedIPs);
            }
            updateIPList();
        }
        
        // Enhanced network notification system
        function showNetworkNotification(message, type = 'info') {
            const notification = document.getElementById('notification');
            const notificationMessage = document.getElementById('notificationMessage');
            
            // Create icon based on type
            let icon = 'fa-info-circle';
            if (type === 'warning') icon = 'fa-exclamation-triangle';
            if (type === 'success') icon = 'fa-check-circle';
            if (type === 'error') icon = 'fa-times-circle';
            
            notificationMessage.innerHTML = `<i class="fas ${icon} me-2"></i>${message}`;
            
            // Set background color based on type
            if (type === 'warning') {
                notification.style.background = 'linear-gradient(135deg, var(--interstoff-red) 0%, #8a0a20 100%)';
            } else if (type === 'success') {
                notification.style.background = 'linear-gradient(135deg, var(--interstoff-green) 0%, #005a2b 100%)';
            } else if (type === 'error') {
                notification.style.background = 'linear-gradient(135deg, #dc3545 0%, #c82333 100%)';
            } else {
                notification.style.background = 'linear-gradient(135deg, var(--interstoff-gold) 0%, #d4af37 100%)';
            }
            
            notification.style.display = 'block';
            
            // Add auto-hide with smooth animation
            setTimeout(() => {
                notification.style.animation = 'slideOut 0.5s forwards';
                setTimeout(() => {
                    notification.style.display = 'none';
                    notification.style.animation = '';
                }, 500);
            }, 5000);
        }
        
        // ==================== EXISTING APPLICATION FUNCTIONS ====================
        
        // Generate a unique computer ID
        function generateComputerId() {
            return 'COMP-' + Math.random().toString(36).substr(2, 9).toUpperCase();
        }
        
        // Check if IP is in same subnet
        function isInSameSubnet(ip) {
            const currentIP = document.getElementById('ipAddress').textContent;
            
            if (!currentIP || currentIP === 'Loading...') return false;
            
            try {
                const currentParts = currentIP.split('.').slice(0, 3).join('.');
                const ipParts = ip.split('.').slice(0, 3).join('.');
                
                return currentParts === ipParts;
            } catch (error) {
                return false;
            }
        }
        
        // Set up event listeners
        function setupEventListeners() {
            // Form submission
            document.getElementById('dataForm').addEventListener('submit', function(e) {
                e.preventDefault();
                addRecord();
            });
            
            // Reset form
            document.getElementById('resetBtn').addEventListener('click', resetForm);
            
            // Auto fill test data
            document.getElementById('autoFillBtn').addEventListener('click', autoFillTestData);
            
            // RFT type selection
            document.querySelectorAll('input[name="rftType"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    toggleRftStatus(this.value);
                });
            });
            
            // Edit RFT type selection
            document.querySelectorAll('input[name="editRftType"]').forEach(radio => {
                radio.addEventListener('change', function() {
                    toggleEditRftStatus(this.value);
                });
            });
            
            // Depth selection - auto-fill standard time
            document.getElementById('depth').addEventListener('change', function() {
                const depth = this.value;
                if (depth && depthStandardTimeMap[depth]) {
                    document.getElementById('productionStandardTime').value = depthStandardTimeMap[depth];
                } else {
                    document.getElementById('productionStandardTime').value = '';
                }
            });
            
            // Edit Depth selection - auto-fill standard time
            document.getElementById('editDepth').addEventListener('change', function() {
                const depth = this.value;
                if (depth && depthStandardTimeMap[depth]) {
                    document.getElementById('editProductionStandardTime').value = depthStandardTimeMap[depth];
                } else {
                    document.getElementById('editProductionStandardTime').value = '';
                }
            });
            
            // Search functionality
            document.getElementById('searchBtn').addEventListener('click', performSearch);
            document.getElementById('clearSearchBtn').addEventListener('click', clearSearch);
            document.getElementById('searchInput').addEventListener('keyup', function(e) {
                if (e.key === 'Enter') {
                    performSearch();
                }
            });
            
            // Filter functionality
            document.getElementById('recordsFilterIncharge').addEventListener('change', updateRecordsTable);
            document.getElementById('recordsFilterRftType').addEventListener('change', updateRecordsTable);
            document.getElementById('recordsFilterStatus').addEventListener('change', updateRecordsTable);
            
            // Generate time report
            document.getElementById('generateTimeReportBtn').addEventListener('click', generateTimeReport);
            document.getElementById('clearTimeReportBtn').addEventListener('click', clearTimeReport);
            
            // Generate day-wise report
            document.getElementById('generateDaywiseReportBtn').addEventListener('click', generateDaywiseReport);
            document.getElementById('printDaywiseReportBtn').addEventListener('click', printDaywiseReport);
            
            // Generate time button
            document.getElementById('generateTimeBtn').addEventListener('click', generateOperationTime);
            document.getElementById('editGenerateTimeBtn').addEventListener('click', generateEditOperationTime);
            
            // Update record
            document.getElementById('updateRecordBtn').addEventListener('click', updateRecord);
            
            // Export functionality
            document.getElementById('exportExcelBtn').addEventListener('click', exportToExcel);
            document.getElementById('sendEmailBtn').addEventListener('click', sendEmailReport);
            document.getElementById('backupDataBtn').addEventListener('click', backupData);
            document.getElementById('restoreDataBtn').addEventListener('click', restoreData);
            
            // Add IP functionality
            document.getElementById('addIpBtn').addEventListener('click', addAuthorizedIP);
            
            // Copy requisition ID
            document.getElementById('copyRequisitionBtn').addEventListener('click', copyRequisitionId);
            
            // Web server controls
            document.getElementById('startServerBtn').addEventListener('click', startWebServer);
            document.getElementById('stopServerBtn').addEventListener('click', stopWebServer);
            
            // Form field changes - show requisition ID when user starts filling form
            document.getElementById('batchNo').addEventListener('input', showRequisitionId);
            document.getElementById('colorName').addEventListener('input', showRequisitionId);
            document.getElementById('inchargeName').addEventListener('change', showRequisitionId);
        }
        
        // Generate a new requisition ID
        function generateNewRequisitionId() {
            const date = new Date();
            const year = date.getFullYear().toString().substr(-2);
            const month = (date.getMonth() + 1).toString().padStart(2, '0');
            const day = date.getDate().toString().padStart(2, '0');
            const random = Math.random().toString(36).substr(2, 5).toUpperCase();
            
            currentRequisitionId = `REQ-${year}${month}${day}-${random}`;
            document.getElementById('currentRequisitionId').textContent = currentRequisitionId;
        }
        
        // Show requisition ID when user starts filling form
        function showRequisitionId() {
            const batchNo = document.getElementById('batchNo').value;
            const colorName = document.getElementById('colorName').value;
            const inchargeName = document.getElementById('inchargeName').value;
            
            if (batchNo || colorName || inchargeName) {
                document.getElementById('requisitionDisplay').style.display = 'block';
            }
        }
        
        // Copy requisition ID to clipboard
        function copyRequisitionId() {
            navigator.clipboard.writeText(currentRequisitionId)
                .then(() => {
                    showNotification('Requisition ID copied to clipboard!', 'success');
                })
                .catch(err => {
                    console.error('Failed to copy: ', err);
                    showNotification('Failed to copy Requisition ID', 'warning');
                });
        }
        
        // Update authorized IPs list
        function updateIPList() {
            const ipListElement = document.getElementById('ipList');
            ipListElement.innerHTML = '';
            
            authorizedIPs.forEach(ip => {
                const ipItem = document.createElement('div');
                ipItem.className = 'ip-list-item';
                ipItem.innerHTML = `
                    <span class="ip-address">${ip}</span>
                    <button class="remove-ip-btn" data-ip="${ip}">
                        <i class="fas fa-times"></i>
                    </button>
                `;
                ipListElement.appendChild(ipItem);
            });
            
            // Add event listeners to remove buttons
            document.querySelectorAll('.remove-ip-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const ip = this.getAttribute('data-ip');
                    removeAuthorizedIP(ip);
                });
            });
        }
        
        // Set current date in date field
        function setCurrentDate() {
            const today = new Date().toISOString().split('T')[0];
            document.getElementById('date').value = today;
        }
        
        // Toggle RFT status fields based on RFT type
        function toggleRftStatus(rftType) {
            document.getElementById('labToBulkStatus').style.display = 'none';
            document.getElementById('bulkToBulkStatus').style.display = 'none';
            
            if (rftType === 'LAB TO BULK') {
                document.getElementById('labToBulkStatus').style.display = 'block';
            } else if (rftType === 'BULK TO BULK') {
                document.getElementById('bulkToBulkStatus').style.display = 'block';
            }
        }
        
        // Toggle edit RFT status fields based on RFT type
        function toggleEditRftStatus(rftType) {
            document.getElementById('editLabToBulkStatus').style.display = 'none';
            document.getElementById('editBulkToBulkStatus').style.display = 'none';
            
            if (rftType === 'LAB TO BULK') {
                document.getElementById('editLabToBulkStatus').style.display = 'block';
            } else if (rftType === 'BULK TO BULK') {
                document.getElementById('editBulkToBulkStatus').style.display = 'block';
            }
        }
        
        // Generate operation time based on standard time
        function generateOperationTime() {
            const standardTime = parseFloat(document.getElementById('productionStandardTime').value);
            
            if (!standardTime || standardTime <= 0) {
                alert('Please select a Depth first to get Standard Time.');
                return;
            }
            
            // Convert minutes to HH:MM format
            const hours = Math.floor(standardTime / 60);
            const minutes = Math.round(standardTime % 60);
            const operationTime = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}`;
            
            document.getElementById('productionOperationTime').value = operationTime;
        }
        
        // Generate operation time for edit form
        function generateEditOperationTime() {
            const standardTime = parseFloat(document.getElementById('editProductionStandardTime').value);
            
            if (!standardTime || standardTime <= 0) {
                alert('Please select a Depth first to get Standard Time.');
                return;
            }
            
            // Convert minutes to HH:MM format
            const hours = Math.floor(standardTime / 60);
            const minutes = Math.round(standardTime % 60);
            const operationTime = `${hours.toString().padStart(2, '0')}:${minutes.toString().padStart(2, '0')}`;
            
            document.getElementById('editProductionOperationTime').value = operationTime;
        }
        
        // Add a new record
        function addRecord() {
            // Get form values
            const date = document.getElementById('date').value;
            const mcNo = document.getElementById('mcNo').value;
            const buyer = document.getElementById('buyer').value;
            const batchNo = document.getElementById('batchNo').value;
            const ldNo = document.getElementById('ldNo').value;
            const colorName = document.getElementById('colorName').value;
            const white = parseInt(document.getElementById('white').value) || 0;
            const wash = parseInt(document.getElementById('wash').value) || 0;
            const color = parseInt(document.getElementById('color').value) || 0;
            const depth = document.getElementById('depth').value;
            const yarnLot = document.getElementById('yarnLot').value;
            const operatorName = document.getElementById('operatorName').value;
            const inchargeName = document.getElementById('inchargeName').value;
            const shift = document.getElementById('shift').value;
            const productionStandardTime = parseFloat(document.getElementById('productionStandardTime').value) || 0;
            const productionOperationTime = document.getElementById('productionOperationTime').value;
            const rftType = document.querySelector('input[name="rftType"]:checked')?.value || '';
            let rftStatus = '';
            
            if (rftType === 'LAB TO BULK') {
                rftStatus = document.getElementById('labToBulkStatusSelect').value;
            } else if (rftType === 'BULK TO BULK') {
                rftStatus = document.getElementById('bulkToBulkStatusSelect').value;
            }
            
            const reasonForFail = document.getElementById('reasonForFail').value;
            const remarks = document.getElementById('remarks').value;
            
            // Validate required fields
            if (!date || !batchNo || !colorName || !color || !inchargeName || !rftType || !rftStatus || !depth) {
                alert('Please fill in all required fields.');
                return;
            }
            
            // Create new record
            const newRecord = {
                id: generateId(),
                requisitionId: currentRequisitionId,
                date,
                mcNo,
                buyer,
                batchNo,
                ldNo,
                colorName,
                white,
                wash,
                color,
                depth,
                yarnLot,
                operatorName,
                inchargeName,
                shift,
                productionStandardTime,
                productionOperationTime,
                rftType,
                rftStatus,
                reasonForFail,
                remarks,
                computerId,
                timestamp: new Date().toISOString()
            };
            
            // Add to data array
            productionData.push(newRecord);
            
            // Save data to localStorage
            saveData();
            
            // Update UI
            updateDashboard();
            resetForm();
            
            // Show notification
            showNotification('Record added successfully with Requisition ID: ' + currentRequisitionId);
        }
        
        // Generate a unique ID
        function generateId() {
            return Date.now().toString(36) + Math.random().toString(36).substr(2);
        }
        
        // Reset the form
        function resetForm() {
            document.getElementById('dataForm').reset();
            document.getElementById('labToBulkStatus').style.display = 'none';
            document.getElementById('bulkToBulkStatus').style.display = 'none';
            document.getElementById('requisitionDisplay').style.display = 'none';
            setCurrentDate();
            generateNewRequisitionId();
        }
        
