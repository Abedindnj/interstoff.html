        // Save data to localStorage
        function saveData() {
            localStorage.setItem('interstoffProductionData', JSON.stringify(productionData));
            localStorage.setItem('currentDataUpdate', Date.now().toString());
        }
        
        // Update the dashboard with current data
        function updateDashboard() {
            updateSummaryStats();
            updateInchargeSummary();
            updateRecordsTable();
            updateTimeReport();
        }
        
        // Update summary statistics
        function updateSummaryStats() {
            const totalRecords = productionData.length;
            const totalProduction = productionData.reduce((sum, record) => sum + record.color, 0);
            
            const labToBulkRecords = productionData.filter(record => record.rftType === 'LAB TO BULK');
            const bulkToBulkRecords = productionData.filter(record => record.rftType === 'BULK TO BULK');
            
            const labToBulkYes = labToBulkRecords.filter(record => record.rftStatus === 'YES').length;
            const labToBulkNo = labToBulkRecords.filter(record => record.rftStatus === 'NO').length;
            const labToBulkTotal = labToBulkRecords.length;
            const labToBulkSuccessRate = labToBulkTotal > 0 ? Math.round((labToBulkYes / labToBulkTotal) * 100) : 0;
            
            const bulkToBulkYes = bulkToBulkRecords.filter(record => record.rftStatus === 'YES').length;
            const bulkToBulkNo = bulkToBulkRecords.filter(record => record.rftStatus === 'NO').length;
            const bulkToBulkTotal = bulkToBulkRecords.length;
            const bulkToBulkSuccessRate = bulkToBulkTotal > 0 ? Math.round((bulkToBulkYes / bulkToBulkTotal) * 100) : 0;
            
            const overallSuccessRate = totalRecords > 0 ? Math.round(((labToBulkYes + bulkToBulkYes) / totalRecords) * 100) : 0;
            
            // Update dashboard stats
            document.getElementById('totalRecords').textContent = totalRecords;
            document.getElementById('totalProduction').textContent = totalProduction;
            document.getElementById('successRate').textContent = `${overallSuccessRate}%`;
            document.getElementById('bulkToBulkTotal').textContent = bulkToBulkTotal;
            document.getElementById('labToBulkTotal').textContent = labToBulkTotal;
            
            // Update RFT summary
            document.getElementById('labToBulkYes').textContent = labToBulkYes;
            document.getElementById('labToBulkNo').textContent = labToBulkNo;
            document.getElementById('labToBulkTotalBox').textContent = labToBulkTotal;
            document.getElementById('labToBulkSuccessRate').textContent = `${labToBulkSuccessRate}%`;
            
            document.getElementById('bulkToBulkYes').textContent = bulkToBulkYes;
            document.getElementById('bulkToBulkNo').textContent = bulkToBulkNo;
            document.getElementById('bulkToBulkTotalBox').textContent = bulkToBulkTotal;
            document.getElementById('bulkToBulkSuccessRate').textContent = `${bulkToBulkSuccessRate}%`;
            
            // Update data count
            document.getElementById('dataCount').textContent = totalRecords;
        }
        
        // Update incharge performance summary
        function updateInchargeSummary() {
            const inchargeSummaryCards = document.getElementById('inchargeSummaryCards');
            inchargeSummaryCards.innerHTML = '';
            
            // Get unique inchargs
            const inchargs = [...new Set(productionData.map(record => record.inchargeName))].filter(Boolean);
            
            inchargs.forEach(incharge => {
                const inchargeRecords = productionData.filter(record => record.inchargeName === incharge);
                const totalRecords = inchargeRecords.length;
                const totalProduction = inchargeRecords.reduce((sum, record) => sum + record.color, 0);
                const successRecords = inchargeRecords.filter(record => record.rftStatus === 'YES').length;
                const successRate = totalRecords > 0 ? Math.round((successRecords / totalRecords) * 100) : 0;
                
                const card = document.createElement('div');
                card.className = 'col-md-4 mb-3';
                card.innerHTML = `
                    <div class="card incharge-card h-100">
                        <div class="card-body">
                            <h5 class="card-title">${incharge}</h5>
                            <div class="row text-center">
                                <div class="col-4">
                                    <div class="stat-number">${totalRecords}</div>
                                    <div class="stat-label">Records</div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-number">${totalProduction}</div>
                                    <div class="stat-label">Production</div>
                                </div>
                                <div class="col-4">
                                    <div class="stat-number">${successRate}%</div>
                                    <div class="stat-label">Success</div>
                                </div>
                            </div>
                        </div>
                    </div>
                `;
                
                inchargeSummaryCards.appendChild(card);
            });
            
            // If no inchargs, show message
            if (inchargs.length === 0) {
                inchargeSummaryCards.innerHTML = '<div class="col-12 text-center py-4"><p>No incharge data available</p></div>';
            }
        }
        
        // Update records table
        function updateRecordsTable() {
            const recordsTable = document.getElementById('recordsTable');
            recordsTable.innerHTML = '';
            
            const inchargeFilter = document.getElementById('recordsFilterIncharge').value;
            const rftTypeFilter = document.getElementById('recordsFilterRftType').value;
            const statusFilter = document.getElementById('recordsFilterStatus').value;
            
            // Filter records
            let filteredRecords = productionData;
            
            if (inchargeFilter !== 'all') {
                filteredRecords = filteredRecords.filter(record => record.inchargeName === inchargeFilter);
            }
            
            if (rftTypeFilter !== 'all') {
                filteredRecords = filteredRecords.filter(record => record.rftType === rftTypeFilter);
            }
            
            if (statusFilter !== 'all') {
                filteredRecords = filteredRecords.filter(record => record.rftStatus === statusFilter);
            }
            
            // Populate table
            filteredRecords.forEach(record => {
                const row = document.createElement('tr');
                
                // Determine status badge color
                let statusBadgeClass = 'bg-secondary';
                if (record.rftStatus === 'YES') {
                    statusBadgeClass = 'bg-success';
                } else if (record.rftStatus === 'NO') {
                    statusBadgeClass = 'bg-danger';
                }
                
                row.innerHTML = `
                    <td>${record.requisitionId}</td>
                    <td>${record.date}</td>
                    <td>${record.batchNo}</td>
                    <td>${record.buyer || '-'}</td>
                    <td>${record.colorName}</td>
                    <td>${record.depth || '-'}</td>
                    <td>${record.color}</td>
                    <td>${record.rftType}</td>
                    <td><span class="badge ${statusBadgeClass}">${record.rftStatus}</span></td>
                    <td>${record.inchargeName}</td>
                    <td>${record.productionStandardTime || '-'}</td>
                    <td>${record.productionOperationTime || '-'}</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary edit-record" data-id="${record.id}">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger delete-record" data-id="${record.id}">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                
                recordsTable.appendChild(row);
            });
            
            // Add event listeners to edit and delete buttons
            document.querySelectorAll('.edit-record').forEach(button => {
                button.addEventListener('click', function() {
                    const recordId = this.getAttribute('data-id');
                    editRecord(recordId);
                });
            });
            
            document.querySelectorAll('.delete-record').forEach(button => {
                button.addEventListener('click', function() {
                    const recordId = this.getAttribute('data-id');
                    deleteRecord(recordId);
                });
            });
            
            // If no records, show message
            if (filteredRecords.length === 0) {
                const row = document.createElement('tr');
                row.innerHTML = `<td colspan="13" class="text-center py-3">No records found</td>`;
                recordsTable.appendChild(row);
            }
        }
        
        // Edit a record
        function editRecord(recordId) {
            const record = productionData.find(r => r.id === recordId);
            if (!record) return;
            
            currentEditId = recordId;
            
            // Populate edit form
            document.getElementById('editDate').value = record.date;
            document.getElementById('editMcNo').value = record.mcNo;
            document.getElementById('editBuyer').value = record.buyer;
            document.getElementById('editBatchNo').value = record.batchNo;
            document.getElementById('editLdNo').value = record.ldNo;
            document.getElementById('editColorName').value = record.colorName;
            document.getElementById('editWhite').value = record.white;
            document.getElementById('editWash').value = record.wash;
            document.getElementById('editColor').value = record.color;
            document.getElementById('editDepth').value = record.depth;
            document.getElementById('editYarnLot').value = record.yarnLot;
            document.getElementById('editOperatorName').value = record.operatorName;
            document.getElementById('editInchargeName').value = record.inchargeName;
            document.getElementById('editShift').value = record.shift;
            document.getElementById('editProductionStandardTime').value = record.productionStandardTime;
            document.getElementById('editProductionOperationTime').value = record.productionOperationTime;
            
            // Set RFT type and status
            if (record.rftType === 'LAB TO BULK') {
                document.getElementById('editLabToBulk').checked = true;
                toggleEditRftStatus('LAB TO BULK');
                document.getElementById('editLabToBulkStatusSelect').value = record.rftStatus;
            } else if (record.rftType === 'BULK TO BULK') {
                document.getElementById('editBulkToBulk').checked = true;
                toggleEditRftStatus('BULK TO BULK');
                document.getElementById('editBulkToBulkStatusSelect').value = record.rftStatus;
            }
            
            document.getElementById('editReasonForFail').value = record.reasonForFail;
            document.getElementById('editRemarks').value = record.remarks;
            
            // Show modal
            const editModal = new bootstrap.Modal(document.getElementById('editRecordModal'));
            editModal.show();
        }
        
        // Update a record
        function updateRecord() {
            if (!currentEditId) return;
            
            const recordIndex = productionData.findIndex(r => r.id === currentEditId);
            if (recordIndex === -1) return;
            
            // Get updated values
            const date = document.getElementById('editDate').value;
            const mcNo = document.getElementById('editMcNo').value;
            const buyer = document.getElementById('editBuyer').value;
            const batchNo = document.getElementById('editBatchNo').value;
            const ldNo = document.getElementById('editLdNo').value;
            const colorName = document.getElementById('editColorName').value;
            const white = parseInt(document.getElementById('editWhite').value) || 0;
            const wash = parseInt(document.getElementById('editWash').value) || 0;
            const color = parseInt(document.getElementById('editColor').value) || 0;
            const depth = document.getElementById('editDepth').value;
            const yarnLot = document.getElementById('editYarnLot').value;
            const operatorName = document.getElementById('editOperatorName').value;
            const inchargeName = document.getElementById('editInchargeName').value;
            const shift = document.getElementById('editShift').value;
            const productionStandardTime = parseFloat(document.getElementById('editProductionStandardTime').value) || 0;
            const productionOperationTime = document.getElementById('editProductionOperationTime').value;
            const rftType = document.querySelector('input[name="editRftType"]:checked')?.value || '';
            let rftStatus = '';
            
            if (rftType === 'LAB TO BULK') {
                rftStatus = document.getElementById('editLabToBulkStatusSelect').value;
            } else if (rftType === 'BULK TO BULK') {
                rftStatus = document.getElementById('editBulkToBulkStatusSelect').value;
            }
            
            const reasonForFail = document.getElementById('editReasonForFail').value;
            const remarks = document.getElementById('editRemarks').value;
            
            // Validate required fields
            if (!date || !batchNo || !colorName || !color || !inchargeName || !rftType || !rftStatus || !depth) {
                alert('Please fill in all required fields.');
                return;
            }
            
            // Update record
            productionData[recordIndex] = {
                ...productionData[recordIndex],
                date,
                mcNo,
                buyer,
                batchNo,
                ldNo,
                colorName,
                white,
                wash,
                color,
                depth,
                yarnLot,
                operatorName,
                inchargeName,
                shift,
                productionStandardTime,
                productionOperationTime,
                rftType,
                rftStatus,
                reasonForFail,
                remarks
            };
            
            // Save data
            saveData();
            
            // Update UI
            updateDashboard();
            
            // Hide modal
            const editModal = bootstrap.Modal.getInstance(document.getElementById('editRecordModal'));
            editModal.hide();
            
            // Show notification
            showNotification('Record updated successfully!');
        }
        
        // Delete a record
        function deleteRecord(recordId) {
            if (!confirm('Are you sure you want to delete this record?')) {
                return;
            }
            
            productionData = productionData.filter(record => record.id !== recordId);
            saveData();
            updateDashboard();
            showNotification('Record deleted successfully!');
        }
        
        // Generate time-based production report
        function generateTimeReport() {
            const startDate = document.getElementById('timeReportStartDate').value;
            const endDate = document.getElementById('timeReportEndDate').value;
            const inchargeFilter = document.getElementById('timeReportIncharge').value;
            
            // Filter records
            let filteredRecords = productionData;
            
            if (startDate) {
                filteredRecords = filteredRecords.filter(record => record.date >= startDate);
            }
            
            if (endDate) {
                filteredRecords = filteredRecords.filter(record => record.date <= endDate);
            }
            
            if (inchargeFilter !== 'all') {
                filteredRecords = filteredRecords.filter(record => record.inchargeName === inchargeFilter);
            }
            
            // Populate time report table
            const timeReportTable = document.getElementById('timeReportTable');
            timeReportTable.innerHTML = '';
            
            filteredRecords.forEach(record => {
                // Calculate efficiency if both times are available
                let efficiency = '-';
                if (record.productionStandardTime && record.productionOperationTime) {
                    const standardMinutes = record.productionStandardTime;
                    const [hours, minutes] = record.productionOperationTime.split(':').map(Number);
                    const operationMinutes = hours * 60 + minutes;
                    
                    if (operationMinutes > 0) {
                        efficiency = Math.round((standardMinutes / operationMinutes) * 100) + '%';
                    }
                }
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${record.date}</td>
                    <td>${record.inchargeName}</td>
                    <td>${record.batchNo}</td>
                    <td>${record.colorName}</td>
                    <td>${record.depth}</td>
                    <td>${record.productionStandardTime || '-'}</td>
                    <td>${record.productionOperationTime || '-'}</td>
                    <td>${efficiency}</td>
                    <td>
                        <button class="btn btn-sm btn-outline-primary edit-time-record" data-id="${record.id}">
                            <i class="fas fa-edit"></i>
                        </button>
                        <button class="btn btn-sm btn-outline-danger delete-time-record" data-id="${record.id}">
                            <i class="fas fa-trash"></i>
                        </button>
                    </td>
                `;
                
                timeReportTable.appendChild(row);
            });
            
            // Add event listeners to edit and delete buttons
            document.querySelectorAll('.edit-time-record').forEach(button => {
                button.addEventListener('click', function() {
                    const recordId = this.getAttribute('data-id');
                    editRecord(recordId);
                });
            });
            
            document.querySelectorAll('.delete-time-record').forEach(button => {
                button.addEventListener('click', function() {
                    const recordId = this.getAttribute('data-id');
                    deleteRecord(recordId);
                });
            });
            
            // If no records, show message
            if (filteredRecords.length === 0) {
                const row = document.createElement('tr');
                row.innerHTML = `<td colspan="9" class="text-center py-3">No records found for the selected criteria</td>`;
                timeReportTable.appendChild(row);
            }
        }
        
        // Clear time report
        function clearTimeReport() {
            document.getElementById('timeReportStartDate').value = '';
            document.getElementById('timeReportEndDate').value = '';
            document.getElementById('timeReportIncharge').value = 'all';
            document.getElementById('timeReportTable').innerHTML = '';
        }
        
        // Generate day-wise production report
        function generateDaywiseReport() {
            const startDate = document.getElementById('daywiseStartDate').value;
            const endDate = document.getElementById('daywiseEndDate').value;
            
            // Filter records by date range
            let filteredRecords = productionData;
            
            if (startDate) {
                filteredRecords = filteredRecords.filter(record => record.date >= startDate);
            }
            
            if (endDate) {
                filteredRecords = filteredRecords.filter(record => record.date <= endDate);
            }
            
            // Group records by date
            const recordsByDate = {};
            filteredRecords.forEach(record => {
                if (!recordsByDate[record.date]) {
                    recordsByDate[record.date] = [];
                }
                recordsByDate[record.date].push(record);
            }
            
            // Generate day-wise report
            const reportContent = document.getElementById('daywiseReportContent');
            reportContent.innerHTML = '';
            
            // Sort dates in descending order
            const sortedDates = Object.keys(recordsByDate).sort().reverse();
            
            sortedDates.forEach(date => {
                const dayRecords = recordsByDate[date];
                
                // Group by incharge for this day
                const inchargeStats = {};
                dayRecords.forEach(record => {
                    if (!inchargeStats[record.inchargeName]) {
                        inchargeStats[record.inchargeName] = {
                            labToBulkYes: 0,
                            labToBulkNo: 0,
                            bulkToBulkYes: 0,
                            bulkToBulkNo: 0,
                            totalProduction: 0
                        };
                    }
                    
                    if (record.rftType === 'LAB TO BULK') {
                        if (record.rftStatus === 'YES') {
                            inchargeStats[record.inchargeName].labToBulkYes++;
                        } else {
                            inchargeStats[record.inchargeName].labToBulkNo++;
                        }
                    } else if (record.rftType === 'BULK TO BULK') {
                        if (record.rftStatus === 'YES') {
                            inchargeStats[record.inchargeName].bulkToBulkYes++;
                        } else {
                            inchargeStats[record.inchargeName].bulkToBulkNo++;
                        }
                    }
                    
                    inchargeStats[record.inchargeName].totalProduction += record.color;
                });
                
                // Create day report section
                const dayReport = document.createElement('div');
                dayReport.className = 'day-wise-report';
                
                let inchargeStatsHTML = '';
                Object.keys(inchargeStats).forEach(incharge => {
                    const stats = inchargeStats[incharge];
                    const totalRecords = stats.labToBulkYes + stats.labToBulkNo + stats.bulkToBulkYes + stats.bulkToBulkNo;
                    const successRate = totalRecords > 0 ? Math.round(((stats.labToBulkYes + stats.bulkToBulkYes) / totalRecords) * 100) : 0;
                    
                    inchargeStatsHTML += `
                        <div class="incharge-day-stat">
                            <h6>${incharge}</h6>
                            <div class="row text-center">
                                <div class="col-6">
                                    <small>Lab to Bulk: ${stats.labToBulkYes}Y/${stats.labToBulkNo}N</small>
                                </div>
                                <div class="col-6">
                                    <small>Bulk to Bulk: ${stats.bulkToBulkYes}Y/${stats.bulkToBulkNo}N</small>
                                </div>
                            </div>
                            <div class="row text-center mt-1">
                                <div class="col-6">
                                    <small>Production: ${stats.totalProduction}</small>
                                </div>
                                <div class="col-6">
                                    <small>Success: ${successRate}%</small>
                                </div>
                            </div>
                        </div>
                    `;
                });
                
                dayReport.innerHTML = `
                    <div class="day-header">
                        <i class="fas fa-calendar-day me-2"></i>${formatDate(date)}
                        <span class="badge bg-primary ms-2">${dayRecords.length} Records</span>
                    </div>
                    <div class="incharge-day-stats">
                        ${inchargeStatsHTML}
                    </div>
                `;
                
                reportContent.appendChild(dayReport);
            });
            
            if (sortedDates.length === 0) {
                reportContent.innerHTML = '<div class="text-center py-4"><p>No records found for the selected date range</p></div>';
            }
        }
        
        // Print day-wise report
        function printDaywiseReport() {
            const printContent = document.getElementById('daywiseReportContent').innerHTML;
            const originalContent = document.body.innerHTML;
            
            document.body.innerHTML = `
                <div class="container">
                    <h1 class="text-center mb-4">Interstoff Apparels Ltd - Day-wise Production Report</h1>
                    ${printContent}
                </div>
            `;
            
            window.print();
            document.body.innerHTML = originalContent;
            updateDashboard();
        }
        
        // Format date for display
        function formatDate(dateString) {
            const options = { year: 'numeric', month: 'long', day: 'numeric' };
            return new Date(dateString).toLocaleDateString(undefined, options);
        }
        
        // Perform search
        function performSearch() {
            const searchTerm = document.getElementById('searchInput').value.trim().toLowerCase();
            
            if (!searchTerm) {
                alert('Please enter a search term.');
                return;
            }
            
            // Filter records based on search term
            const searchResults = productionData.filter(record => 
                record.batchNo.toLowerCase().includes(searchTerm) ||
                record.buyer?.toLowerCase().includes(searchTerm) ||
                record.colorName.toLowerCase().includes(searchTerm) ||
                record.ldNo?.toLowerCase().includes(searchTerm) ||
                record.requisitionId.toLowerCase().includes(searchTerm)
            );
            
            // Update search results dashboard
            updateSearchResultsDashboard(searchResults);
            
            // Show search results section
            document.getElementById('searchResultsDashboard').style.display = 'block';
        }
        
        // Update search results dashboard
        function updateSearchResultsDashboard(results) {
            // Update stats
            document.getElementById('searchTotalRecords').textContent = results.length;
            document.getElementById('searchTotalProduction').textContent = results.reduce((sum, record) => sum + record.color, 0);
            
            const successRecords = results.filter(record => record.rftStatus === 'YES').length;
            const successRate = results.length > 0 ? Math.round((successRecords / results.length) * 100) : 0;
            document.getElementById('searchSuccessRate').textContent = `${successRate}%`;
            
            const requisitionCount = new Set(results.map(record => record.requisitionId)).size;
            document.getElementById('searchRequisitionCount').textContent = requisitionCount;
            
            // Update table
            const searchResultsTable = document.getElementById('searchResultsTable');
            searchResultsTable.innerHTML = '';
            
            results.forEach(record => {
                // Determine status badge color
                let statusBadgeClass = 'bg-secondary';
                if (record.rftStatus === 'YES') {
                    statusBadgeClass = 'bg-success';
                } else if (record.rftStatus === 'NO') {
                    statusBadgeClass = 'bg-danger';
                }
                
                const row = document.createElement('tr');
                row.innerHTML = `
                    <td>${record.requisitionId}</td>
                    <td>${record.batchNo}</td>
                    <td>${record.buyer || '-'}</td>
                    <td>${record.colorName}</td>
                    <td>${record.color}</td>
                    <td>${record.rftType}</td>
                    <td><span class="badge ${statusBadgeClass}">${record.rftStatus}</span></td>
                    <td>${record.inchargeName}</td>
                    <td>${record.date}</td>
                `;
                
                searchResultsTable.appendChild(row);
            });
            
            // If no results, show message
            if (results.length === 0) {
                const row = document.createElement('tr');
                row.innerHTML = `<td colspan="9" class="text-center py-3">No records found for "${document.getElementById('searchInput').value}"</td>`;
                searchResultsTable.appendChild(row);
            }
        }
        
        // Clear search
        function clearSearch() {
            document.getElementById('searchInput').value = '';
            document.getElementById('searchResultsDashboard').style.display = 'none';
        }
        
        // Export data to Excel
        function exportToExcel() {
            // Create worksheet
            const ws = XLSX.utils.json_to_sheet(productionData.map(record => ({
                'Requisition ID': record.requisitionId,
                'Date': record.date,
                'MC No': record.mcNo,
                'Buyer': record.buyer,
                'Batch No': record.batchNo,
                'LD No': record.ldNo,
                'Color Name': record.colorName,
                'White Qty': record.white,
                'Wash Qty': record.wash,
                'Color Qty': record.color,
                'Depth': record.depth,
                'Yarn Lot': record.yarnLot,
                'Operator Name': record.operatorName,
                'Incharge Name': record.inchargeName,
                'Shift': record.shift,
                'Production Standard Time': record.productionStandardTime,
                'Production Operation Time': record.productionOperationTime,
                'RFT Type': record.rftType,
                'RFT Status': record.rftStatus,
                'Reason for Fail': record.reasonForFail,
                'Remarks': record.remarks
            })));
            
            // Create workbook
            const wb = XLSX.utils.book_new();
            XLSX.utils.book_append_sheet(wb, ws, 'Production Data');
            
            // Generate Excel file and trigger download
            XLSX.writeFile(wb, `Interstoff_Production_Data_${new Date().toISOString().split('T')[0]}.xlsx`);
            
            showNotification('Data exported to Excel successfully!');
        }
        
        // Send email report (simulated)
        function sendEmailReport() {
            const emailRecipient = document.getElementById('emailRecipient').value;
            
            if (!emailRecipient) {
                alert('Please enter an email address.');
                return;
            }
            
            // Simulate sending email
            showNotification(`Report sent to ${emailRecipient} successfully!`);
            document.getElementById('emailRecipient').value = '';
        }
        
        // Backup data
        function backupData() {
            const backupFileName = document.getElementById('backupFileName').value || `interstoff_backup_${new Date().toISOString().split('T')[0]}`;
            
            // Create backup data
            const backupData = {
                productionData: productionData,
                authorizedIPs: authorizedIPs,
                backupDate: new Date().toISOString()
            };
            
            // Create blob and download link
            const blob = new Blob([JSON.stringify(backupData, null, 2)], { type: 'application/json' });
            const url = URL.createObjectURL(blob);
            const a = document.createElement('a');
            a.href = url;
            a.download = `${backupFileName}.json`;
            document.body.appendChild(a);
            a.click();
            document.body.removeChild(a);
            URL.revokeObjectURL(url);
            
            showNotification('Data backed up successfully!');
            document.getElementById('backupFileName').value = '';
        }
        
        // Restore data
        function restoreData() {
            const fileInput = document.getElementById('restoreFile');
            const file = fileInput.files[0];
            
            if (!file) {
                alert('Please select a backup file.');
                return;
            }
            
            const reader = new FileReader();
            reader.onload = function(e) {
                try {
                    const backupData = JSON.parse(e.target.result);
                    
                    if (backupData.productionData) {
                        productionData = backupData.productionData;
                        if (backupData.authorizedIPs) {
                            authorizedIPs = backupData.authorizedIPs;
                            updateIPList();
                        }
                        
                        saveData();
                        updateDashboard();
                        
                        showNotification('Data restored successfully!');
                        fileInput.value = '';
                    } else {
                        alert('Invalid backup file format.');
                    }
                } catch (error) {
                    alert('Error reading backup file: ' + error.message);
                }
            };
            
            reader.readAsText(file);
        }
        
        // Show notification
        function showNotification(message, type = 'success') {
            const notification = document.getElementById('notification');
            const notificationMessage = document.getElementById('notificationMessage');
            
            notificationMessage.textContent = message;
            
            // Set background color based on type
            if (type === 'warning') {
                notification.style.background = 'var(--interstoff-red)';
            } else if (type === 'info') {
                notification.style.background = 'var(--interstoff-green)';
            } else {
                notification.style.background = 'var(--interstoff-green)';
            }
            
            notification.style.display = 'block';
            
            // Hide after 3 seconds
            setTimeout(() => {
                notification.style.display = 'none';
            }, 3000);
        }
    </script>
</body>
</html>
